            "type": "object",
            "properties": {
              "strength": {
                "type": "number",
                "example": 0.78
              },
              "trend": {
                "type": "string",
                "example": "steady"
              }
            }
          },
          "nodes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SemanticNode"
            }
          },
          "annotations": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "resonance": {
            "type": "number",
            "description": "Розрахована відповідність між Ci та користувачем",
