          },
          "receivedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Час фіксації профілю в Node.js шарі"
          }
        }
      },
      "InsightSummary": {
        "type": "object",
        "properties": {
          "profilesCached": {
            "type": "integer",
