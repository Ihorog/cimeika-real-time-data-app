            "example": "component-12345"
          },
          "name": {
            "type": "string",
            "description": "Назва компоненту",
            "example": "Компонент 1"
          },
          "type": {
            "type": "string",
            "description": "Тип компоненту",
            "example": "базовий"
          },
          "attributes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Attribute"
            }
          }
        }
      },
      "Attribute": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "Назва атрибуту",
            "example": "атрибут-1"
